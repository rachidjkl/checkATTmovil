<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_claro"
    app:layoutDescription="@xml/fragment_justificar_falta_scene4"
    tools:context=".ui.justificarFalta.JustificarFaltaFragment">


    <Button
        android:id="@+id/btn_enviar"
        style="@style/estiloBoton1"
        android:text="@string/btn_enviar"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />


    <TextView
        android:id="@+id/text_reason"
        style="@style/estiloTexto"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:text="@string/txt_motivo"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/edit_reason"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_reason"
        style="@style/estiloEditText"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.124" />

    <TextView
        android:id="@+id/text_comentario"
        style="@style/estiloTexto"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:text="@string/txt_comentario"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/edit_comentario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.972" />

    <EditText
        android:id="@+id/edit_comentario"
        style="@style/estiloEditText"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="25dp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_reason"
        app:layout_constraintVertical_bias="0.011" />


    <TextView
        android:id="@+id/text_adjuntar_documento"
        style="@style/estiloTexto"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:text="@string/txt_adjuntar_documento"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/edit_adjuntar_documento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.967" />

    <EditText
        android:id="@+id/edit_adjuntar_documento"
        style="@style/estiloEditText"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="75dp"
        android:hint="Selecciona una imagen"
        android:textAlignment="textStart"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_comentario"
        app:layout_constraintVertical_bias="0.011" />




    <TextView
        android:id="@+id/text_seleccionar_fecha"
        style="@style/estiloTexto"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:text="@string/txt_seleccionar_fecha"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/date_picker_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.979" />

    <Button
        android:id="@+id/date_picker_button"
        style="@style/estiloBoton2"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:text="02/03/2023"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_adjuntar_documento"
        app:layout_constraintVertical_bias="0.015" />

    <ImageView
        android:id="@+id/imageViewPapelera"
        android:layout_width="31dp"
        android:layout_height="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/papelera"
        app:layout_constraintBottom_toBottomOf="@+id/edit_adjuntar_documento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toEndOf="@+id/edit_adjuntar_documento"
        app:layout_constraintTop_toBottomOf="@+id/edit_comentario"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageViewClip"
        android:layout_width="19dp"
        android:layout_height="21dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/clip"
        app:layout_constraintBottom_toBottomOf="@+id/edit_adjuntar_documento"
        app:layout_constraintEnd_toEndOf="@+id/edit_adjuntar_documento"
        app:layout_constraintTop_toTopOf="@+id/edit_adjuntar_documento" />

    <LinearLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerViewJustificarFalta"
            android:layout_marginLeft="20dp"
            android:layout_width="369dp"
            android:layout_height="352dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.38"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.957"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>